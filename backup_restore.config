# shellcheck shell=bash
# backup_restore.config
# Konfiguracja dla skryptów backup-cloud.sh i restore-cloud.sh (Wersja 7.0 "Phoenix")

# shellcheck disable=SC2034
# --- GŁÓWNA KONFIGURACJA ---
GH_REPO=""
LOG_FILE="$HOME/Desktop/backup_restore.log"
GPG_RECIPIENT_EMAIL=""

# --- KONFIGURACJA ZAWARTOSCI BACKUPU ---
# Lista plików i katalogów do dołączenia do kopii zapasowej.
BACKUP_PATHS=(
    # --- Podstawowa konfiguracja Shell ---
    "$HOME/.zshrc"
    "$HOME/.secrets"
    "$HOME/.p10k.zsh"

    # --- ZINTEGROWANE LOGI Z PRECMD DLA SKRYPTU RESTORE ---
    "$HOME/.log_deb_urls.txt"
    "$HOME/.log_git_urls.txt"
    "$HOME/.log_pip_packages.txt"
    "$HOME/.log_npm_global_packages.txt"
    "$HOME/.log_go_packages.txt"

    # --- Konfiguracja narzędzi ---
    "$HOME/.config/amass"
    "$HOME/.config/subfinder"
    "$HOME/.config/warp-terminal"
    "$HOME/.local/state/warp-terminal"
)

# Lista narzędzi Go do backupu (używana jako fallback).
GO_TOOLS_TO_BACKUP=(
    "github.com/owasp-amass/amass/v4/cmd/amass@latest"
    "github.com/projectdiscovery/subfinder/v2/cmd/subfinder@latest"
)


